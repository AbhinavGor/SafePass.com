    <?php
$charset = '';
    if(isset($_POST['Uletters']))
    {
        $charset = $charset.'ABCDEFGHIJKLMNOPQRSTUVWXYZ';
    }
    if(isset($_POST['Lletters']))
    {
        $charset  = $charset.'abcdefghijklmnopqrstuvwxyz';
    }
    if(isset($_POST['Numbers']))
    {
        $charset = $charset.'1234567890';
    }
    if(isset($_POST['Special']))
    {
        $charset = $charset.'%$&@!\'\"\\\/.,[]{}()^~`';
    }
    if(!(isset($_POST['Uletters']) and isset($_POST['Lletters']) and isset($_POST['Numbers']) and isset($_POST['Symbols'])))
    {
        echo 'Select at least one of the options.';
    }

    if(isset($_POST['generate']))
    {
        $generate_password = substr(str_shuffle($charset), 0,10);
        echo $generate_password;
    }

    
?>
